<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">lof_mautic_contact_listing.lof_mautic_contact_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>lof_mautic_contact_columns</spinner>
		<deps>
			<dep>lof_mautic_contact_listing.lof_mautic_contact_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add new Contact</label>
			</button>
            <button name="sync">
				<url path="*/*/sync"/>
				<class>primary</class>
				<label translate="true">Sync Contacts</label>
			</button>
		</buttons>
	</settings>
	<dataSource name="lof_mautic_contact_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">contact_id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Lof_Mautic::Contact</aclResource>
		<dataProvider name="lof_mautic_contact_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>contact_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">lof_mautic_contact_listing.lof_mautic_contact_listing.lof_mautic_contact_columns.ids</item>
                    <item name="indexField" xsi:type="string">contact_id</item>
                </item>
            </argument>
            <action name="delete">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">delete</item>
                        <item name="label" xsi:type="string" translate="true">Delete</item>
                        <item name="url"  xsi:type="url" path="mautic/contact/massDelete"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Delete items</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you wan't to delete selected items?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="lof_mautic_contact_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">lof_mautic_contact_listing.lof_mautic_contact_listing.lof_mautic_contact_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">contact_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" xsi:type="url" path="mautic/contact/inlineEdit"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">lof_mautic_contact_listing.lof_mautic_contact_listing.lof_mautic_contact_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>contact_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="contact_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>

        <column name="mautic_contact_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Mautic Contact ID</label>
			</settings>
		</column>

        <column name="customer_id" class="Lof\Mautic\Ui\Component\Listing\Column\CustomerName">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Lof_Mautic/js/grid/columns/link</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Customer</item>
                </item>
            </argument>
        </column>

		<column name="facebook">
			<settings>
				<filter>text</filter>
				<label translate="true">Facebook</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="foursquare">
			<settings>
				<filter>text</filter>
				<label translate="true">Foursquare</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="instagram">
			<settings>
				<filter>text</filter>
				<label translate="true">Instagram</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="linkedin">
			<settings>
				<filter>text</filter>
				<label translate="true">Linkedin</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="skype">
			<settings>
				<filter>text</filter>
				<label translate="true">Skype</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="twitter">
			<settings>
				<filter>text</filter>
				<label translate="true">Twitter</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="haspurchased">
			<settings>
				<filter>text</filter>
				<label translate="true">Has Purchased</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="prospect_or_customer">
			<settings>
				<filter>text</filter>
				<label translate="true">Prospect Or Customer</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="stage">
			<settings>
				<filter>text</filter>
				<label translate="true">Stage</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="tags">
			<settings>
				<filter>text</filter>
				<label translate="true">Tags</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="website">
			<settings>
				<filter>text</filter>
				<label translate="true">Website</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>

        <actionsColumn name="actions" class="Lof\Mautic\Ui\Component\Listing\Column\ContactActions">
			<settings>
				<indexField>contact_id</indexField>
				<resizeEnabled>false</resizeEnabled>
				<resizeDefaultWidth>107</resizeDefaultWidth>
			</settings>
		</actionsColumn>
	</columns>
</listing>
