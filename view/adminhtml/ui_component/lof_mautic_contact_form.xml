		</buttons>
		<namespace>lof_mautic_contact_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>lof_mautic_contact_form.contact_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="contact_form_data_source">
